@model PagedList.IPagedList<BpmOnline.EntityDataServiceReference.Contact>
@using PagedList.Mvc
@{
    ViewBag.Title = "Home Page";
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Mobile phone</th>
            <th>Dear</th>
            <th>Job title</th>
            <th>Birth date</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MobilePhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dear)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.JobTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BirthDate, "ShortDateTime")
                        <br />
                    </td>
                    <td>
                        @Html.ActionLink("Update", "Update", "Home",
                       new { updateId = item.Id },
                       new { @class = "btn-link" }) |
                        @Html.ActionLink("Delete", "Delete", "Home",
                       new { deleteId = item.Id },
                       new { @class = "btn-link" })

                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<br />
    Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page }))